{
    "name": "tony-sol/flatter",
    "license": "MIT",
    "description": "Simple flatter, allows you to flatten and inflate multidimensional arrays",
    "authors": [
        {
            "name": "Tony Sol",
            "email": "tony.kent.nar.earth@gmail.com"
        }
    ],
    "require": {
        "php": ">=8.1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9",
        "phpstan/phpstan": "^1",
        "squizlabs/php_codesniffer": "^3",
        "vimeo/psalm": "^4",
        "vkcom/modulite-phpstan": "^1"
    },
    "config": {
        "allow-plugins": {
            "composer/package-versions-deprecated": true
        }
    },
    "autoload": {
        "psr-4": {
            "Flatter\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Flatter\\Tests\\": "tests/"
        }
    }
}
